{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
